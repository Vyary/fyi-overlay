{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fyi-overlay",
  "version": "0.1.7",
  "identifier": "com.vyary.fyi-overlay",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "fyi-overlay",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "decorations": false,
        "focusable": false,
        "shadow": false,
        "width": 0,
        "height": 0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
